root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 1
trim_trailing_whitespace = true
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

[Dockerfile]
quote_type = double
indent_style = space
indent_size = 2

[*.{yml,yaml}]
quote_type = double
indent_style = space
indent_size = 2

[*.{py}]
quote_type = double
indent_style = space
indent_size = 4
